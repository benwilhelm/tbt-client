<div id="new_party_dialog">
  <h3 class="dialog-title">Add New Party</h3>
  
  <p class="party-name input-wrapper">
    <label for="party_name">Name:</label>
    <input type="text" name="party_name" id="party_name" />
  </p>
  <p class="party-size input-wrapper">
    <label for="party_size">Size:</label>
    <input type="text" name="party_size" id="party_size" />
  </p>
  <p class="party-phone input-wrapper">
    <label for="party_phone">Phone:</label>
    <input type="text" name="party_phone" id="party_phone" />
  </p>
  
  <button id='add_party_button' class="button">Add Party</button>
  <button id='close_button' class="button">Close</button>
  <div class="clear"></div>
</div><!-- #new_party_dialog -->