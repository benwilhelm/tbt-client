  <div class="party">
    <div class="col-left">
      <div class="party-info">
  	    <div class="party-size">{{size}}</div>
  	    <div class="name">{{name}}</div>
  	    <div class="time time-seated"><span>Time seated:</span> {{hourMinute time_seated}}</div>
  	    <div class="time time-taken"><span>Time Taken:</span> {{hourMinute time_taken}}</div>
  	  </div><!-- .party-info -->
    </div><!-- .half.left -->
    <div class="buttons">
  	  <div {{action 'cancel' this target='view'}} class="button cancel">Cancel</div>
  	  <div {{action 'unseat' this target='view'}} class="button unseat">Unseat</div>
    </div><!-- .buttons -->
    <div class="clear"></div>
  </div><!-- .party -->

